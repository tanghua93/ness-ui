{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./build/lib",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "allowJs": true,
    "jsx": "react",
    "build":true,
    "moduleResolution": "Node",
    "suppressImplicitAnyIndexErrors":true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src"
  ],
    "exclude": [
      "src/**/*.test.tsx",
      "src/**/*.stories.tsx",
      "src/setupTests.ts",
    ]
}